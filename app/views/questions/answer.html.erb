<div class="mt-3">
  <figure class="p-2 border-start border-light-subtle border-5">
    <blockquote class="blockquote">
      <p><%= params[:question] %></p>
    </blockquote>
    <figcaption class="blockquote-footer">
      <em>You</em>
    </figcaption>
  </figure>
  <figure class="p-2 border-start border-light-subtle border-5 bg-warning bg-opacity-10 rounded">
    <blockquote class="blockquote">
      <p><%= @answer %></p>
    </blockquote>
    <figcaption class="blockquote-footer">
      <em>Your coach</em>
    </figcaption>
  </figure>

  <%= link_to "Ask a new question", "ask", class: "lead link" %>
</div>